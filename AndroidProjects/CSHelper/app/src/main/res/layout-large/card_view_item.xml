<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/cardItemsLayout"
        android:background="@drawable/exercise_card_border">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:id="@+id/expandCardButton"
            android:layout_alignTop="@+id/dataStructureDescriptionText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:id="@+id/dataStructureItemText"
            android:layout_gravity="left|top">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardLearnMoreLinkTextView"
            android:text="Click to learn more"
            android:textColor="#0645AD"
            android:layout_below="@id/dataStructureDescriptionText"
            android:layout_marginTop="160dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataStructureDescriptionText"
            android:textColor="#000000"
            android:text="lala"
            android:layout_marginTop="60dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|top" />

    </FrameLayout>

</android.support.v7.widget.CardView>